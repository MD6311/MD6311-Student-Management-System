@model StudentManagement.Models.Student
@{
    ViewData["Title"] = "Student Details";
}

<div class="row">
    <div class="col-md-10 mx-auto">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-person-circle"></i> Student Details</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-person-badge-fill"></i> @Model.Name
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">Personal Information</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td width="40%"><strong>Full Name:</strong></td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td><strong>Date of Birth:</strong></td>
                                <td>@Model.DOB.ToString("MMMM dd, yyyy")</td>
                            </tr>
                            <tr>
                                <td><strong>Mobile:</strong></td>
                                <td>@Model.Mobile</td>
                            </tr>
                            <tr>
                                <td><strong>Address:</strong></td>
                                <td>@Model.Address</td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">Academic Information</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td width="40%"><strong>Enrollment No:</strong></td>
                                <td>@Model.EnrollmentNo</td>
                            </tr>
                            <tr>
                                <td><strong>GR Number:</strong></td>
                                <td>@Model.GRNumber</td>
                            </tr>
                            <tr>
                                <td><strong>Semester:</strong></td>
                                <td><span class="badge bg-primary">Semester @Model.Semester</span></td>
                            </tr>
                            <tr>
                                <td><strong>Field:</strong></td>
                                <td><span class="badge bg-success">@Model.Field</span></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <hr>

                <div class="row">
                    <div class="col-md-12">
                        <h5 class="text-primary mb-3">Contact Information</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td width="20%"><strong>Institute Email:</strong></td>
                                <td>
                                    <a href="mailto:@Model.InstituteEmail">
                                        <i class="bi bi-envelope-fill"></i> @Model.InstituteEmail
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Personal Email:</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.PersonalEmail))
                                    {
                                        <a href="mailto:@Model.PersonalEmail">
                                            <i class="bi bi-envelope"></i> @Model.PersonalEmail
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <hr>
                    <div class="row">
                        <div class="col-md-12">
                            <h5 class="text-primary mb-3">Notes</h5>
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle-fill"></i> @Model.Notes
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="card-footer">
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil-fill"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>
                    <a asp-action="Index" class="btn btn-secondary ms-auto">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>